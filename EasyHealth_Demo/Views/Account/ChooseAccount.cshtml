<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row">
        <div class="col">
            <div class="card align-items-center" style="display:flex; flex-direction: column; background: var(--white); border-radius: 20px; width: 700px; height:290px; padding: 20px 0px 20px 15px; box-shadow: 0 0 15px 15px rgba(0, 0, 0, 0.13); ">
                <form method="post" action="/Account/GetAccountType">
                <h2 style="font-weight:900; margin:10px 0px 10px 30px; ">Choose Account Type</h2>
                <div class="radio-toolbar">
                    <input type="radio" id="radioClient" name="radioAccType" value="client" checked>
                    <label class="btn" for="radioClient">
                        <i class="fas fa-plus-square">
                        </i>
                        <span>Client</span>
                    </label>

                    <input type="radio" id="radioHospital" name="radioAccType" value="hospital">
                    <label class="btn" for="radioHospital">
                        <i class="fas fa-hospital">
                        </i>
                        <span>Hospital</span>
                    </label>
                </div>
                <button class="button" type="submit"><span>Next</span></button>
                </form>
            </div>
        </div>

    </div>
</div>
